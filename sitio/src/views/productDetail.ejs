<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{title: "Snikers-Producto" }) %>

    <body class="productDetail" style="background-color: var(--color-gris);">
        <% include partials/header%>
            <main class="container mt-5 mb-4">
                <h1>Detalle del producto</h1>
                <div class="row">
                    <div class="col-12 col-md-10 mx-auto mt-4">
                        <div class="card p-4 bg-light shadow">
                            <div class="row">
                                <div class="col-12 col-md-6 col-lg-4  mt-3 position-relative">
                                    <div class="position-absolute top-0 end-0">
                                            <img style="object-fit: contain;"  width="100px" class="rounded-circle shadow" src="/images/img_index/marcas/<%= producto.marca.nombre == "Adidas" ? 'logoAdidas.jpg' : producto.marca.nombre == "Nike" ? 'logoNike.jpg' : producto.marca.nombre == "Jordan" ? 'logoJordan.jpg' : 'logoYzy.jpg' %> " alt="">
                                        
                                    </div>
                                        <img class=" img-fluid rounded-circle shadow"  src="/images/products/<%= producto.imagenes[0].file %> " alt="">
                                </div>
                                <div class="col-12 col-md-6 col-lg-8 mt-3">
                                    <div class="">
                                        <div class="">
                                            <h3>
                                                <%= producto.nombre %>
                                            </h3>
                                            <div class="texto">
                                                <%= producto.descripcion %>
                                            </div>
                                            <div class="mt-5 text-center">
                                                <button class="btn btn-primary">Agregar al carrito</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="box-products" style="width: 100%;">
                                    <h5 class="text-secondary mt-4">Productos relacionados</h5>
                                    <hr class="text-dark">
                                <div class="glider-contain">
                                    <div class="glider">
                                        <% productos.forEach(producto=> { %>
                                            <section >
                                                <a href="/products/detail/<%= producto.id %>">
                                                <article class="item-carousel bg-white shadow" style="padding:10px; margin: 10px 5px;">
                                                    <figure >
                                                            <img style="height: 150px; object-fit: contain;" src="/images/products/<%= producto.imagenes[0].file %> "
                                                            alt="">
                                                      
                                                    </figure>
                                                 
                                                            <h6>
                                                                <%= producto.nombre %>
                                                            </h6>
                                                </article>
                                            </a>
                                            </section>
                                           
                                            <% }) %>

                                    </div>
                                </div>
                            </div>
                        </div>
                     
                    
                    </div>
                  
                </div>
                </div>
            </main>
            <% include partials/footer %>
            <script src="/javascript/glider.js"></script>
            <script src="/javascript/productDetail.js"></script>

    </body>

</html>