<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{title: "Snikers-Producto"}) %>
<body class="producto">
    <% include partials/header%> 
    <main>
        <div class="container">
            <div class="imagen-producto">
                <div class="imagenes">
                    <div class="img-principal">
                        <img src="/images/img-detailProduct/zapatilla1.webp" alt="">             
                    </div>
                    <div class="imagenes-sec">
                        <div class="imagen-small">
                            <img src="/images/img-detailProduct/zapatilla2.JPG " alt="">
                        </div>
                        <div class="imagen-small">
                            <img src="/images/img-detailProduct/zapatilla3.webp" alt="">

                        </div>
                        <div class="imagen-small">
                            <img src="/images/img-detailProduct/zapatilla4.jpg" alt="">

                        </div>
                    </div>
                </div>
                <div class="descripcion">
                    <div class="principal">
                        <h3><%= producto.Nombre %> </h3>
                    <div class="texto">
                        <%= producto.Descripcion %> 
                    </div>
                    <div class="icons">
                        <div class="icono"><i class="fas fa-cart-plus"></i></div>
                     </div>
                    </div>
                </div>
            </div>
            <div class="others">
                <h2>Productos Similares</h2>
                    <div class="muestras">
                        <% similares.forEach( similar => { %>
                        <div class="muestra">
                           
                            <div class="img"><img src="/images/img-detailProduct/zapatilla1.webp" alt=""></div>
                            <div class="descr">
                                <h4><%= similar.Nombre %> </h4>
                                <div class="text"><%= similar.Descripcion %> </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                    </div>
               
            </div>
        </div>
    </main>
   <% include partials/footer %> 
</body>
</html>