<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{title: "Home" }) %>

    <body class="index">
        <% include partials/header %>
            <main>
                <div class="container-fluid">

                    <div class="unico">
                        <div class="row mt-5">
                            <div class="col-12 col-md-6 col-lg-3 my-2">
                                <img class="img-fluid" src="/images/img_index/marcas/logoAdidas.jpg" alt="">
                            </div>
                            <div class="col-12 col-md-6 col-lg-3 my-2">
                                <img class="img-fluid" src="/images/img_index/marcas/logoJordan.jpg" alt="">
                            </div>
                            <div class="col-12 col-md-6 col-lg-3 my-2">
                                <img class="img-fluid" src="/images/img_index/marcas/logoNike.jpg" alt="">
                            </div>
                            <div class="col-12 col-md-6 col-lg-3 my-2">
                                <img class="img-fluid" src="/images/img_index/marcas/logoYzy.jpg" alt="">
                            </div>
                        </div>

                        <section>
                            <div class="carrusel-Ofertas">
                                <div>
                                    <p>Ofertas</p>
                                    <hr class="ofertas">
                                </div>
                                <div class="row">
                                    <% ofertas.forEach(oferta=> { %>
                                        <div class="col-12 col-md-4 col-lg-3">
                                            <section class="articulos">
                                                <a href="/products/detail/<%= oferta.id %> ">
                                                    <article>
                                                        <img src="/images/products/<%= oferta.imagenes[0].file %> "
                                                            alt="">
                                                        <div class="datos">
                                                            <div class="caja1">
                                                                <h4>
                                                                    <%= oferta.nombre %>
                                                                </h4>
                                                                <h5 class="text-end">
                                                                    $ <%= toThousand(oferta.precio) %>
                                                                </h5>
                                                            </div>
                                                            <div class="caja2">

                                                                <div class="heart"><%= oferta.marca.nombre %> </div>
                                                            </div>
                                                        </div>
                                                    </article>
                                                </a>
                                            </section>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                        </section>


                        <section>
                            <div class="carrusel-destacado">
                                <div>
                                    <p>Productos destacados</p>
                                    <hr class="destacados">
                                </div>
                                <div class="row">
                                    <% destacados.forEach(destacado=> { %>
                                        <div class="col-12 col-md-4 col-lg-3">
                                            <section class="articulos">
                                                <article>
                                                    <img src="/images/products/<%= destacado.imagenes[0].file %> "
                                                        alt="">
                                                    <div class="datos">
                                                        <div class="caja1">
                                                            <h4>
                                                                <%= destacado.nombre %>
                                                            </h4>
                                                            <h5 class="text-end">
                                                                $ <%= toThousand(destacado.precio) %>
                                                            </h5>
                                                        </div>
                                                        <div class="caja2">
                                                            <div class="heart"><%= destacado.marca.nombre %> </div>
                                                        </div>
                                                    </div>
                                                </article>
                                            </section>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                            <div class="container py-3" >
                            <div class="row">
                                <div class="col-12 col-md-4 col-lg-3 py-3">
                                    <img class="img-fluid" src="/images/img_index/marcas/bannerAdidas.jpg" alt="">
                                </div>
                                <div class="col-12 col-md-8 col-lg-9">
                                    <div class="box-products" style="width: 100%;">
                                       
                                        <div class="glider-contain">
                                            <div class="glider">
                                                <% adidas.forEach(producto=> { %>
                                                    <section class="articulos " style="background-color: var(--color-azul);">
                                                        <article class="item-carousel" style="padding:5px;">
                                                            <% if (producto.imagenes) { %>
        
                                                                <img src="/images/products/<%= producto.imagenes[0].file %> "
                                                                    alt="">
                                                                <%}%>
                                                                    <div class="datos">
                                                                        <div class="caja1">
                                                                            <h4>
                                                                                <%= producto.nombre %>
                                                                            </h4>
        
                                                                        </div>
        
                                                                    </div>
                                                        </article>
                                                    </section>
        
                                                    <% }) %>
        
                                            </div>
        
                                        </div>
                                    </div>
                                </div>
                             
                            </div>
                        </div>
                        <div class="container p-3" >
                            <div class="row">
                                <div id="nikeDesktop" class="col-12 col-lg-7">
                                    <img  width="100%" height="230px" class="mt-4" src="/images/img_index/marcas/bannerNike.png" alt="">
                                </div>
                                <div id="nikeMobile" class="col-12 col-lg-7" style="background-color: var(--color-gris);">
                                    <img width="100%" height="230px" class="mt-4" src="/images/img_index/marcas/transparentNike.png" alt="">
                                </div>
                                <div class="col-12 col-lg-5">
                            <div class="box-products" style="width: 100%;">
                               
                                <div class="glider-contain">
                                    <div class="glider glider2">
                                        <% nike.forEach(producto=> { %>
                                            <section class="articulos " style="background-color: var(--color-azul);">
                                                <article class="item-carousel" style="padding:5px;">
                                                    <% if (producto.imagenes) { %>

                                                        <img src="/images/products/<%= producto.imagenes[0].file %> "
                                                            alt="">
                                                        <%}%>
                                                            <div class="datos">
                                                                <div class="caja1">
                                                                    <h4>
                                                                        <%= producto.nombre %>
                                                                    </h4>

                                                                </div>

                                                            </div>
                                                </article>
                                            </section>

                                            <% }) %>

                                    </div>

                                </div>
                            </div>
                        </div>
                       
                    </div>
                        </section>



                    </div>
                </div>

                <div class="carrusel-final">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/img_index/bann/ban1.jpg" class="imagen1" alt="imagen1"><img
                                    class="imagen2" src="/images/img_index/bann/ban2.jpg" alt="imagen2">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/img_index/bann/ban3.jpg" class="imagen1" alt=""><img
                                    src="/images/img_index/bann/ban6.jpg" class="imagen2" alt="">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/img_index/bann/ban1.jpg" class="imagen1" alt=""><img
                                    src="/images/img_index/bann/ban2.jpg" class="imagen2" alt="">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </main>
            <% include partials/footer %>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                    crossorigin="anonymous"></script>
                <script src="/javascript/glider.js"></script>
                <script src="/javascript/index.js"></script>
    </body>

</html>